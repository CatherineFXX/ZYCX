<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp" >

        <TextView
            android:id="@+id/expert_tv_other_title"
            style="@style/others_request"
            android:text=" " />

        <TextView
            android:id="@+id/expert_tv_other_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/expert_tv_title"
            android:layout_marginTop="@dimen/margin_left_small"
            android:gravity="left"
            android:lineSpacingExtra="@dimen/text_lineSpacingExtra"
            android:text=" "
            android:textColor="@color/text_more_gray"
            android:textSize="@dimen/text_common" />

        <TextView
            android:id="@+id/tv_expert_other_user"
            style="@style/others_request"
            android:layout_marginTop="15dp"
            android:text=" "
            android:textColor="@color/text_yellow" />

        <TextView
            android:id="@+id/tv_expert_other_anwser_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/text_more_gray"
            android:lineSpacingExtra="@dimen/text_lineSpacingExtra"
            android:layout_marginTop="10dp"
            android:textSize="@dimen/text_common" />
    </LinearLayout>

</ScrollView>