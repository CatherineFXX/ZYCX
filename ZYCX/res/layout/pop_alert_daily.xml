            android:paddingLeft="10dp" >

            <ImageView
                android:id="@+id/iv_alert_three"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/weixuanzhong" />

            <TextView
                android:id="@+id/tv_alert_three"
                style="@style/radio_button"
                android:gravity="center_vertical"
                android:text="@string/alert_daily_three" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_alert_four"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/view_border_gray_white_0"
