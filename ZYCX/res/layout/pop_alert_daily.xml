                android:src="@drawable/weixuanzhong" />

            <TextView
                android:id="@+id/tv_alert_sex"
                style="@style/radio_button"
                android:gravity="center_vertical"
                android:text="@string/alert_daily_sex" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_alert_seven"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/view_border_gray_white_0"
            android:gravity="center_vertical"
            android:clickable="true"
            android:orientation="horizontal"
            android:paddingLeft="10dp" >

            <ImageView
                android:id="@+id/iv_alert_seven"
                android:layout_width="wrap_content"
