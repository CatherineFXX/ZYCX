<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/main_white_bg_color"
    android:orientation="vertical"
    android:paddingBottom="@dimen/margin_bottom"
    android:paddingTop="@dimen/margin_top" >

    <LinearLayout
        android:id="@+id/ll_alert_daily"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/margin_left"
        android:paddingRight="@dimen/margin_right" >

        <LinearLayout
            android:id="@+id/ll_alert_everyday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/view_border_gray_white_0"
            android:gravity="center_vertical"
            android:clickable="true"
            android:orientation="horizontal"
            android:paddingLeft="10dp" >

            <ImageView
                android:id="@+id/iv_alert_everyday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/weixuanzhong" />

            <TextView
                android:id="@+id/tv_alert_everyday"
                style="@style/radio_button"
                android:gravity="center_vertical"
                android:text="@string/alert_daily_everydaty" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_alert_two"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/view_border_gray_white_0"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:clickable="true"
            android:paddingLeft="10dp" >

            <ImageView
                android:id="@+id/iv_alert_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/weixuanzhong" />

            <TextView
                android:id="@+id/tv_alert_two"
                style="@style/radio_button"
                android:gravity="center_vertical"
                android:text="@string/alert_daily_two" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_alert_three"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
