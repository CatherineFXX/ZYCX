<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp" >

    <ImageView
        android:id="@+id/iv_zixun"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:src="@drawable/default_image_small" />

    <RelativeLayout
        android:id="@+id/rl_zixun"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:alpha="0.5"
        android:background="@color/black"
        android:padding="@dimen/margin_left_small" >

        <TextView
            android:id="@+id/tv_zixun_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="一封写给患者的信"
            android:textColor="@color/text_white"
            android:textSize="@dimen/text_common" />

        <TextView
            android:id="@+id/tv_zixun_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/iv_photo"
            android:layout_alignParentRight="true"
            android:drawableLeft="@drawable/liulanliang"
            android:drawablePadding="5dp"
            android:text="2"
            android:textColor="@color/text_more_gray"
            android:textSize="@dimen/text_small" />
    </RelativeLayout>

</FrameLayout>