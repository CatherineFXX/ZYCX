<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/main_white_pure_color"
    android:orientation="vertical"
    android:paddingBottom="@dimen/margin_bottom_big"
    android:paddingTop="@dimen/margin_top_big" >

    <!-- 时间选择器 -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/main_white_pure_color"
        android:orientation="horizontal" >

        <qcjlibrary.widget.wheelview.WheelView
            android:id="@+id/wv_date_year"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <qcjlibrary.widget.wheelview.WheelView
            android:id="@+id/wv_date_month"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <qcjlibrary.widget.wheelview.WheelView
            android:id="@+id/wv_date_day"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_date_sure"
        style="@style/check_button"
        android:layout_marginRight="@dimen/margin_right"
        android:gravity="center"
        android:text="确定"
        android:textSize="@dimen/text_small" />

</LinearLayout>