<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/main_white_pure_color"
    android:gravity="left"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tv_title"
        style="@style/text_base"
        android:text="治疗过程"
        android:textColor="@color/text_black"
        android:textSize="@dimen/text_big" />

    <TextView
        android:id="@+id/tv_time"
        style="@style/text_base"
        android:text="治疗时间：2015-01-01" />
    <TextView 
        android:id="@+id/tv_start" 
        style="@style/text_base"
        android:visibility="gone"
        android:text="开始时间:2015.01.01"
        />
    <TextView 
        android:id="@+id/tv_end" 
        style="@style/text_base"
        android:visibility="gone"
        android:text="结束时间:2015.01.01"
        />

    <TextView
        android:id="@+id/tv_hospital"
        style="@style/text_base"
        android:text="医院：四川省华西医院" />

    <TextView
        android:id="@+id/tv_way_or_program"
        style="@style/text_base"
        android:visibility="visible"
        android:text="血常规：" />
    
    <TextView
        android:id="@+id/tv_list_name"
        style="@style/text_base"
        android:visibility="visible"
        android:textColor="@color/black"
        android:text="模板" />
    
	<LinearLayout 
	    android:id="@+id/ll_present_result"
	    style="@style/text_base"
	    android:orientation="vertical"
	    >
	</LinearLayout>
	
	<include 
	    style="@style/text_base"
	    layout="@layout/view_line_vertical"/>
</LinearLayout>