<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" 
    android:background="@color/main_gray_color"
    android:padding="@dimen/check_button_margin">
    
	<ImageView
	    android:id="@+id/iv_qclass_cancel"
	    android:src="@drawable/cha"
	    style="@style/qclass_cmd_send"
	    android:layout_alignParentLeft="true"
	    />
	<ImageView
	    android:id="@+id/iv_qclass_send"
	    android:src="@drawable/gou"
	    style="@style/qclass_cmd_send"
	    android:layout_alignParentRight="true"
	    />
	<EditText 
	    android:id="@+id/edt_qclass_cmd"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:hint="说点什么吧"
	    android:layout_marginTop="@dimen/append_margin_top"
	    android:layout_below="@id/iv_qclass_cancel"
	    android:background="@drawable/view_border_gray_50"
	    />
	<TextView 
	    android:id="@+id/tv_words_count"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:text="400"
	    android:layout_below="@id/edt_qclass_cmd"
	    android:layout_alignParentRight="true"
	    android:textColor="@color/gray"
	    />
    
</RelativeLayout>
