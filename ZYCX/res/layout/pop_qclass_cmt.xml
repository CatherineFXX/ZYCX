<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/main_white_other_color"
    android:padding="@dimen/check_button_margin" >

    <ImageView
        android:id="@+id/iv_qclass_cancel"
        style="@style/qclass_cmd_send"
        android:layout_alignParentLeft="true"
        android:src="@drawable/cha" />

    <ImageView
        android:id="@+id/iv_qclass_send"
        style="@style/qclass_cmd_send"
        android:layout_alignParentRight="true"
        android:src="@drawable/gou" />

    <EditText
        android:id="@+id/edt_qclass_cmd"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@id/iv_qclass_cancel"
        android:layout_marginTop="@dimen/append_margin_top"
        android:background="@drawable/view_border_gray_20"
        android:inputType="textMultiLine"
        android:gravity="top|left"
        android:cursorVisible="true"
        android:textCursorDrawable="@color/text_green"
        android:hint="说点什么吧" />

    <TextView
        android:id="@+id/tv_words_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/edt_qclass_cmd"
        android:text="400"
        android:textColor="@color/gray" />

</RelativeLayout>