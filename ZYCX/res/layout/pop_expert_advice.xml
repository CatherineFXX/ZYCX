<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_white_pure_color"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:paddingRight="@dimen/margin_right" >

        <TextView
            android:id="@+id/tv_samle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="简历模版"
            android:textColor="@color/text_green"
            android:textSize="@dimen/text_common" />

        <ImageView
            android:id="@+id/iv_samle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_right_small"
            android:layout_toLeftOf="@id/tv_samle"
            android:src="@drawable/mobanicon" />
    </RelativeLayout>

</LinearLayout>