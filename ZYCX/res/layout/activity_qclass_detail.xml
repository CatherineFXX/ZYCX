<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_gray_color"
    android:orientation="vertical" >
    
    <ImageView 
        android:id="@+id/iv_qclass_video"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:src="@drawable/apk"
        android:layout_weight="1"
        />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_height"
        android:orientation="horizontal"
        android:background="@color/main_white_pure_color"
        >
        <TextView 
            android:id="@+id/tv_qclass_chapter"
            style="@style/qclass_tab"
            android:layout_weight="1"
            android:text="章节"
            />
        <TextView 
            android:id="@+id/tv_qclass_discuss"
            style="@style/qclass_tab"
            android:layout_weight="1"
            android:text="讨论"
            />
        <TextView 
            android:id="@+id/tv_qclass_detail"
            style="@style/qclass_tab"
            android:layout_weight="1"
            android:text="详细信息"
            />
    </LinearLayout>
    
    <android.support.v4.view.ViewPager
        android:id="@+id/vp_qclass_detail"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        />

</LinearLayout>
