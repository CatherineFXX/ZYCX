<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:alpha="0.98"
    android:background="@color/main_white_pure_color"
    android:orientation="vertical"
    android:paddingLeft="@dimen/margin_left_small"
    android:paddingRight="@dimen/margin_right_small" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/item_height"
        android:text="癌种分类"
        android:textColor="@color/text_green"
        android:textSize="@dimen/text_very_big" />

    <GridView
        android:id="@+id/gv_category"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/item_height"
        android:numColumns="2" >
    </GridView>

</LinearLayout>